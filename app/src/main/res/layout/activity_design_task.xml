<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/container"
    tools:context=".view.DesignTaskActivity">
    <com.google.android.material.tabs.TabLayout

        app:tabTextAppearance="@style/tabstyle"


        android:background="@drawable/tab_background"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"


        android:layout_marginTop="5dp"
        android:layout_width="@dimen/_150sdp"
        app:tabIndicator="@color/whiteback"
        android:id="@+id/activity_design_tab_layout"

        app:tabTextColor="#808080"
        app:tabSelectedTextColor="@color/black"
        app:tabIndicatorColor="#cecece"
        app:tabIndicatorHeight="1sp"

        app:tabIndicatorFullWidth="false"



        android:layout_height="wrap_content">
        <com.google.android.material.tabs.TabItem





            android:layout_width="wrap_content"

            android:layout_height="wrap_content"

            android:id="@+id/activity_design_tab_oone"

            android:text="فرعاتي"
            android:textColor="@color/black"/>
        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:id="@+id/activity_design_tab_two"
            android:layout_height="wrap_content"
            android:text="الاخرين"
            android:textColor="@color/black"/>


    </com.google.android.material.tabs.TabLayout>
    <ImageView
        android:layout_width="@dimen/_25sdp"
        android:layout_height="@dimen/_25sdp"
        android:src="@drawable/my_list_help_accepted_nav_add"
        android:layout_alignParentRight="true"
        android:layout_marginTop="5dp"/>
    <ImageView
        android:layout_width="@dimen/_25sdp"
        android:layout_height="@dimen/_25sdp"
        android:src="@drawable/my_list_help_accepted_back"
        android:layout_alignParentLeft="true"/>

</RelativeLayout>